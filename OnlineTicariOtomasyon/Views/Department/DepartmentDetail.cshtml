@using OnlineTicariOtomasyon.Models.Classes
@model List<Stuff>

@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color:red">Department Detail Page</h2>
<br />
<ol class="breadcrumb mb-4" >
    <li class="breadcrumb-item active">Department Name: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Sales</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.StaffName</td>
            <td>@x.StuffSurname</td>
            <td><a class="btn btn-info" href="/Department/DepartmentStuffSales/@x.StaffID">Sales</a></td>
        </tr>

    }

</table>
