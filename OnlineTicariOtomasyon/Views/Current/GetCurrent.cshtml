@model OnlineTicariOtomasyon.Models.Classes.Current
@{
    ViewBag.Title = "GetCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color:dodgerblue">Update Current Page</h2>
<br />
@using (Html.BeginForm("UpdateCurrent", "Current", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.CurrentID)
    @Html.LabelFor(x => x.CurrentName)
    @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.CurrentSurname)
    @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CurrentSurname, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.CurrentCity)
    @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CurrentEmail)
    @Html.TextBoxFor(x => x.CurrentEmail, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-secondary">Update</button>
</div>
}
