@model OnlineTicariOtomasyon.Models.Classes.CargoDetail
@{
    ViewBag.Title = "NewCargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center;color:red">New Cargo Information Page</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TrackingCode)
   <input  type="text" value="@ViewBag.trackingCode" class="form-control" readonly name="TrackingCode"/>
    <br />
    @Html.LabelFor(x => x.Staff)
    @Html.TextBoxFor(x => x.Staff, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Recipient)
    @Html.TextBoxFor(x => x.Recipient, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    <input type="date" name="Date" class="form-control" />
    <br />
    @Html.LabelFor(x => x.Statement)
    @Html.TextAreaFor(x => x.Statement, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Save</button>
</form>

