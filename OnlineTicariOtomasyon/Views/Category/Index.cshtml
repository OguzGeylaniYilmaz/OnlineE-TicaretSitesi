@using OnlineTicariOtomasyon.Models.Classes
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>
                @x.CategoryID
            </td>
            <td>@x.CategoryName</td>

            <td><a class="btn btn-danger" href="/Category/DeleteCategory/@x.CategoryID">Delete</a></td>
            <td><a class="btn btn-primary" href="/Category/GetCategory/@x.CategoryID">Update</a></td>


        </tr>

    }

</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Category/AddCategory" class="btn btn-outline-success">Add Category</a>