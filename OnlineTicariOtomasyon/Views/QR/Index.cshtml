
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div>
    @using (Html.BeginForm("Index", "QR", FormMethod.Post))
    {
        <input type="text"  name="code"/>
        <input  type="submit"  value="Get A QR Code"/>
    }
    <br />

    @if(ViewBag.qrImage != null)
    {
        <img src="@ViewBag.qrImage" alt="" style="width:400px;height:400px" />
    }
</div>

