@using OnlineTicariOtomasyon.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Current</th>
            <th>Stuff</th>
            <th>Piece</th>
            <th>Price</th>
            <th>Total Amount</th>
            <th>Date</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesID</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Current.CurrentName @x.Current.CurrentSurname</td>
            <td>Empty</td>
            <td>@x.Piece</td>
            <td>@x.Price</td>
            <td>@x.TotalAmount</td>
            <td>@x.Date</td>
            <td><a href="/Sales/GetSales/@x.SalesID/" class="btn btn-info">Update</a></td>
            <td><a href="/Sales/SalesDetail/@x.SalesID/" class="btn btn-danger">Details</a></td>
        </tr>
    }
</table>
<br />
<a href="/Sales/NewSale/" class="btn btn-dark">New Sale</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>


